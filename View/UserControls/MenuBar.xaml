<UserControl x:Class="TodoList.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TodoList.View.UserControls"
             xmlns:TodoList="clr-namespace:TodoList"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Create User" FontSize="19px" Cursor="Hand" Click="BtnCreateUser_Click"/>
            <MenuItem Header="Create Task" FontSize="19px" Cursor="Hand" Click="BtnCreateTask_Click"/>
            <MenuItem Header="ToDo List" FontSize="19px" Cursor="Hand" Click="BtnToDoList_Click"/>
        </Menu>
    </Grid>
</UserControl>
